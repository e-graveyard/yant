{
  "name": "yant",
  "version": "0.3.0",
  "description": "Yet Another NodeJS Template",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "babel -f .babelrc.js src -d dist --copy-files",
    "watch": "nodemon",
    "flow": "flow",
    "prettify": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write './src/*.js'",
    "standard": "standard --fix",
    "fix:style": "npm run prettier && npm run standard",
    "check:lint": "eslint src/*.js",
    "check:style": "standard",
    "check:types": "flow status",
    "check:all": "npm run check:lint && npm run check:style && npm run check:types",
    "test": "jest --verbose",
    "test:unit": "jest --collect-coverage",
    "coverage:report": "codecov --token=\"$CODECOV_TOKEN\"",
    "docs": "jsdoc -c .jsdoc.json"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check:lint && npm run check:types",
      "pre-push": "npm run check:all && npm test"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build && npm start",
    "ext": "js"
  },
  "keywords": [
    "javascript",
    "nodejs",
    "template",
    "yant"
  ],
  "author": "Caian R. Ertl",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/yant.git"
  },
  "bugs": {
    "url": "https://github.com/caian-org/yant/issues"
  },
  "homepage": "https://github.com/caian-org/yant#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/plugin-transform-modules-commonjs": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-flow": "^7.12.13",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "codecov": "^3.8.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "flow-bin": "^0.144.0",
    "husky": "^4.3.8",
    "ink-docstrap": "^1.3.2",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "standard": "^16.0.3"
  }
}
