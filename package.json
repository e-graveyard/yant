{
  "name": "yant",
  "version": "1.0.0",
  "description": "Yet Another NodeJS Template",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon index.js",
    "test": "npm run test:unit-quiet",
    "test:unit": "nyc --all -x \"tests/**\" -x \"index.js\" ava --verbose tests/unit/*.test.js",
    "test:unit-quiet": "ava tests/unit/*.test.js",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "docs": "jsdoc -c .jsdoc.json",
    "lint": "eslint --format=codeframe src tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test:unit-quiet"
    }
  },
  "keywords": [
    "javascript",
    "nodejs",
    "template",
    "yant"
  ],
  "author": "Caian R. Ertl",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caian-org/yant.git"
  },
  "bugs": {
    "url": "https://github.com/caian-org/yant/issues"
  },
  "homepage": "https://github.com/caian-org/yant#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-jest": "^26.6.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "husky": "^4.3.0",
    "ink-docstrap": "^1.3.2",
    "jest": "^26.6.0",
    "jsdoc": "^3.6.6",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "standard": "^14.3.4"
  }
}
